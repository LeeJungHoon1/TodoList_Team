		public void changeTodo(Board b) {
			
		}
		
		// 할일삭제 - 윤 *보류
		
		public void deleteTodo(int No) {
			
		}
		
		

		public void close(AutoCloseable... a) {
			for (AutoCloseable item : a) {
				try {
					item.close();
				} catch (Exception e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}

	}
}
